<% begin %> 
	<% @this_business_theme_inferred = @business_themes_inferred.detect { |business_theme_inferred| business_theme_inferred[:guid] == params[:guid] } %>

	<h2>recent articles about companies that are notably associated with <%= @this_business_theme_inferred[:label] %></h2>	

    <% @results.each do |result| %>

      <table>
        <tr>
          <td rowspan="3"><img width="128" src="<%= result['thumbnail'][1]['@id'] %>" /></td>
          <td><strong><a href="<%= result['@id'] %>"><%= result['title'] %></a></strong></td>
        </tr>
        <tr>
          <td><%= result['description'] %></td>
        </tr>
        <tr>  
          <td valign="top"><%= result['dateModified'] %></td>
        </tr>
      </table>

    <% end %>

<% rescue => e %>
      <p style="padding-left:2em">no articles about companies notably associated with "<%= @this_business_theme_inferred[:label] %>" yet</p> 
<% end %> 
