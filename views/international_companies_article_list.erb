<% begin %> 
	<!-- grab the company from the hash by it's :guid -->
	<% @this_international_company = @international_companies.detect { |international_company| international_company[:guid] == params[:guid] } %>

	<!-- if it's got a :marketSymbol then fetch a graph -->
	<% unless @this_international_company[:marketSymbol].nil? %>
		<h2>market value for <%= @this_international_company[:label] %></h2>	
		<img src="http://www.bbc.co.uk/news/business/market_data/chart?chart_primary_ticker=<%= @this_international_company[:marketSymbol] %>" />
	<% end %>

	<!-- cycle through each of the creative works returned by LDP for this concept -->	
	<h2>recent news about <%= @this_international_company[:label] %></h2>	
	<% @results.each do |result| %>
	<table>
		<tr>
			<td rowspan="3"><img width="128" src="<%= result['thumbnail'][1]['@id'] %>" /></td>
			<td><strong><a href="<%= result['primaryContentOf'][0]['@id'] %>"><%= result['title'] %></a></strong></td>
		</tr>
		<tr>
			<td><%= result['description'] %></td>
		</tr>
		<tr>  
			<td valign="top"><%= result['dateModified'] %></td>
		</tr>
	</table>

<% end %>
<!-- handle a 404 response from LDP (not tagged content) -->
<% rescue => e %>
      <p>no content annotated with "<%= @this_international_company[:label] %>" yet</p> 
<% end %> 
